                                          <th>Coupon Code</th>
                                          <th>Maximum Amount</th>
                                          <th>Discount Percentage</th>
                                          <th>Start Date</th>
                                          <th>End Date</th>
                                          <th>Action</th>
                                      </tr>
                                  </thead>
