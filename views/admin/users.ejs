    <script>
document.addEventListener("DOMContentLoaded", function() {
  const searchInput = document.getElementById('searchInput');
  const userTableBody = document.getElementById('user-table-body');
  
  // Add event listener for search input
  searchInput.addEventListener('input', function() {
    const query = searchInput.value.trim();
    
    // Fetch the filtered users from the server
    fetch(`/admin/users?query=${encodeURIComponent(query)}`, {
      method: 'GET',
      headers: {
        'Content-Type': 'application/json'
      }
    })
    .then(response => response.json())
    .then(data => {
      // Clear the existing table content
      userTableBody.innerHTML = '';

      // If no users are found, show 'No user found' message
      if (data.users.length === 0) {
        userTableBody.innerHTML = `<tr><td colspan="6" class="text-center">No user found</td></tr>`;
      } else {
        // Populate the table with the returned data
        data.users.forEach((user, index) => {
          userTableBody.innerHTML += `
            <tr>
              <td>${index + 1}</td>
              <td>${user.FirstName} ${user.LastName}</td>
              <td>${user.Email}</td>
              <td>${new Date(user.CreatedAt).toLocaleDateString('en-GB')}</td>
              <td>${user.Is_verified ? 'Verified' : 'Not Verified'}</td>
              <td>
                <a href="#" class="btn ${user.Is_block ? 'btn-success' : 'btn-danger'}" data-toggle="modal" data-target="#${user.Is_block ? 'unblockModal' : 'blockModal'}${user.id}">
                  ${user.Is_block ? 'Unblock' : 'Block'}
                </a>
              </td>
            </tr>
          `;
        });
      }

      // Clear the search input after handling the response
      searchInput.value = '';
    })
    .catch(error => console.error('Error:', error));
  });
});
    </script>
