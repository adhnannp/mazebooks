    <script>
      // Function to validate all fields and enable/disable submit button
function validateForm() {
    const title = document.getElementById('offerTitle').value.trim();
    const discount = document.getElementById('discountPercentage').value;
    const startDate = new Date(document.getElementById('startDate').value);
    const endDate = new Date(document.getElementById('endDate').value);
    const targetType = document.getElementById('targetType').value;
    const targetSelected = document.querySelector('#productCheckboxes input:checked') || document.querySelector('#categoryCheckboxes input:checked');
    
    const titleError = document.getElementById('title-error');
    const discountError = document.getElementById('discount-error');
    const startDateError = document.getElementById('startDate-error');
    const endDateError = document.getElementById('endDate-error');
    const targetTypeError = document.getElementById('targetType-error');
    const targetError = document.getElementById('target-error');
    
    const submitButton = document.getElementById('submitButton');
    let isValid = true;

    // Validate offer title
    const titleRegex = /^[A-Za-z]+(?:\s[A-Za-z]+)*$/;
    if (!titleRegex.test(title)) {
        titleError.style.display = 'block';
        titleError.textContent = "Offer title should only contain letters, no numbers, no multiple spaces.";
        isValid = false;
    } else {
        titleError.style.display = 'none';
    }

    // Validate discount percentage
    if (discount < 0 || discount > 100 || discount === "") {
        discountError.style.display = 'block';
        discountError.textContent = "Discount percentage must be between 0 and 100.";
        isValid = false;
    } else {
        discountError.style.display = 'none';
    }

    // Validate end date
    if (endDate <= startDate || endDate<= new Date() || isNaN(endDate.getTime())) {
        endDateError.style.display = 'block';
        endDateError.textContent = "End date cannot be earlier,today or same as the start date.";
        isValid = false;
    } else {
        endDateError.style.display = 'none';
    }

    // Validate target type selection
    if (!targetType) {
        targetTypeError.style.display = 'block';
        targetTypeError.textContent = "Please select a target type.";
        isValid = false;
    } else {
        targetTypeError.style.display = 'none';
    }

    // Validate target selection (Product or Category)
    if (!targetSelected) {
        targetError.style.display = 'block';
        targetError.textContent = "Please select at least one target.";
        isValid = false;
    } else {
        targetError.style.display = 'none';
    }

    // Enable or disable submit button based on validity
    submitButton.disabled = !isValid;
}

// Handle dynamic loading of products and categories
const targetTypeSelect = document.getElementById('targetType');
const productCheckboxesDiv = document.getElementById('productCheckboxes');
const categoryCheckboxesDiv = document.getElementById('categoryCheckboxes');

const products = <%- JSON.stringify(products) %>;
const categories = <%- JSON.stringify(categories) %>;
const targetIds = <%- JSON.stringify(offer.TargetId) %>;

targetTypeSelect.addEventListener('change', function () {
    const selectedValue = this.value;

    if (selectedValue === 'Product') {
        productCheckboxesDiv.innerHTML = ''; // Clear previous checkboxes
        products.forEach(product => {
            const isChecked = targetIds.includes(product._id.toString()) ? 'checked' : '';
            const checkbox = `<div><input type="checkbox" name="productIds" value="${product._id}" ${isChecked}> ${product.Name}</div>`;
            productCheckboxesDiv.innerHTML += checkbox;
        });
        productCheckboxesDiv.style.display = 'block';
        categoryCheckboxesDiv.style.display = 'none';
    } else if (selectedValue === 'Category') {
        categoryCheckboxesDiv.innerHTML = ''; // Clear previous checkboxes
        categories.forEach(category => {
            const isChecked = targetIds.includes(category._id.toString()) ? 'checked' : '';
            const checkbox = `<div><input type="checkbox" name="categoryIds" value="${category._id}" ${isChecked}> ${category.CategoryName}</div>`;
            categoryCheckboxesDiv.innerHTML += checkbox;
        });
        categoryCheckboxesDiv.style.display = 'block';
        productCheckboxesDiv.style.display = 'none';
    }

    validateForm();
});

// Initialize the target type to trigger checkbox rendering on page load
targetTypeSelect.dispatchEvent(new Event('change'));

// Add real-time validation listeners
document.getElementById('offerTitle').addEventListener('input', validateForm);
document.getElementById('discountPercentage').addEventListener('input', validateForm);
document.getElementById('startDate').addEventListener('change', validateForm);
document.getElementById('endDate').addEventListener('change', validateForm);
  </script>
<script>
    // Check if there are query parameters
    const urlParams = new URLSearchParams(window.location.search);
  
    // Common SweetAlert dark theme settings for error
    const swalDarkTheme = {
        background: '#1f1f1f',  // Dark background
        color: '#fff',  // White text color
        confirmButtonColor: '#f44336',  // Red button for error
        buttonsStyling: true,
    };
  
    // Show SweetAlert for error message
    if (urlParams.has('error')) {
        const errorMessage = urlParams.get('error');
        Swal.fire({
            icon: 'error',
            title: 'Error',
            text: errorMessage,
            ...swalDarkTheme  // Apply dark theme settings
        }).then(() => {
            // Remove query parameters from the URL after showing the alert
            window.history.replaceState({}, document.title, window.location.pathname);
        });
    }
  </script>
  
